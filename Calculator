num1 = float(input("Enter First Number"))
op= input("Enter and operator (+, -, *, /): ")
num2 = float(input("Enter Second Number"))

if op == "+":
    print(num1 + num2)
elif op == "-":
    print(num1 - num2)
elif op == "*":
    print(num1 * num2)
elif op == "/" and num2 == 0:
    print("Can't divide by 0 bro")
elif op == "/":
    print(num1 / num2)
else:
    print("invalid operator")
